{# extend the parent tpl #}
{% extends '/Backend/layout.twig' %}

{% set pageTitle = 'New Advertisement &raquo; My Website' %}

{# overwrite the pageContent block #}
{% block pageContent %}
    <div id="main-header" class="page-header">
        <ul class="breadcrumb">
            <li>
                <a href="{{ path('backend.advertisements.overview') }}"><i class="icon-home"></i></a>lannimmoo
                <span class="divider">&raquo;</span>
            </li>
            <li>
                <a href="{{ path('backend.advertisements.new') }}">Nieuwe advertentie</a>
            </li>
        </ul>

        <h1 id="main-heading">
            Nieuwe advertentie
        </h1>
    </div>

    <div id="main-content">

        <div class="row-fluid">
            <div class="span12 widget">
                <div class="widget-header">
                    <span class="title"><i class="icon-business-card"></i> Nieuwe advertentie</span>
                </div>
                <div class="widget-content form-container">
                    <form class="form-horizontal">
                        <div class="control-group">
                            {{ form_label(newform.propertytype, 'Vastgoedtype', {'attr': { 'class': 'control-label'} }) }}
                            <div class="controls">
                                {{ form_widget(newform.propertytype, {'attr': { 'class': 'input-xlarge'} }) }}
                                {{ form_errors(newform.propertytype) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(newform.description, 'Beschrijving', {'attr': { 'class': 'control-label'} }) }}
                            <div class="controls">
                                {{ form_widget(newform.description, {'attr': { 'class': 'span12'} }) }}
                                {{ form_errors(newform.description) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(newform.price, 'Prijs', {'attr': { 'class': 'control-label'} }) }}
                            <div class="controls">
                                <div class="input-prepend">
                                    <span class="add-on">&#8364;</span>{{ form_widget(newform.price, {'attr': { 'class': 'input-xlarge'} }) }}
                                    {{ form_errors(newform.price) }}
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(newform.epc, 'EPC', {'attr': { 'class': 'control-label'} }) }}
                            <div class="controls">
                                {{ form_widget(newform.epc, {'attr': { 'class': 'input-xlarge'} }) }}
                                {{ form_errors(newform.epc) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(newform.ki, 'K.I.', {'attr': { 'class': 'control-label'} }) }}
                            <div class="controls">
                                <div class="input-prepend">
                                    <span class="add-on">&#8364;</span>{{ form_widget(newform.ki, {'attr': { 'class': 'input-xlarge'} }) }}
                                    {{ form_errors(newform.ki) }}
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(newform.chambers, 'Kamers', {'attr': { 'class': 'control-label'} }) }}
                            <div class="controls">
                                {{ form_widget(newform.chambers, {'attr': { 'class': 'input-xlarge'} }) }}
                                {{ form_errors(newform.chambers) }}

                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(newform.living_area, 'Bewoonbare opp.', {'attr': { 'class': 'control-label'} }) }}
                            <div class="controls">
                                {{ form_widget(newform.living_area, {'attr': { 'class': 'input-xlarge'} }) }}
                                {{ form_errors(newform.living_area) }}

                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(newform.total_area, 'Totale opp.', {'attr': { 'class': 'control-label'} }) }}
                            <div class="controls">
                                {{ form_widget(newform.total_area, {'attr': { 'class': 'input-xlarge'} }) }}
                                {{ form_errors(newform.total_area) }}

                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(newform.rent_sell, 'Verkoop/Verhuur', {'attr': { 'class': 'control-label'} }) }}
                            <div class="controls">
                                {{ form_widget(newform.rent_sell, {'attr': { 'class': 'input-xlarge'} }) }}
                                {{ form_errors(newform.rent_sell) }}

                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(newform.sold_rented, 'Verkocht/Verhuurd', {'attr': { 'class': 'control-label'} }) }}
                            <div class="controls">
                                {{ form_widget(newform.sold_rented, {'attr': { 'class': 'input-xlarge', 'data-provide' : 'ibutton', 'data-label-on' : 'Ja',  'data-label-off' : 'Nee'} }) }}
                                {{ form_errors(newform.sold_rented) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(newform.street, 'Straat', {'attr': { 'class': 'control-label'} }) }}
                            <div class="controls">
                                {{ form_widget(newform.street, {'attr': { 'class': 'input-xlarge'} }) }}
                                {{ form_errors(newform.street) }}

                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(newform.housenumber, 'Huisnummer', {'attr': { 'class': 'control-label'} }) }}
                            <div class="controls">
                                {{ form_widget(newform.housenumber, {'attr': { 'class': 'input-xlarge'} }) }}
                                {{ form_errors(newform.housenumber) }}

                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(newform.bus, 'Bus', {'attr': { 'class': 'control-label'} }) }}
                            <div class="controls">
                                {{ form_widget(newform.bus, {'attr': { 'class': 'input-xlarge'} }) }}
                                {{ form_errors(newform.bus) }}

                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(newform.code, 'Postcode', {'attr': { 'class': 'control-label'} } )}}
                            <div class="controls">
                                {{ form_widget(newform.code, {'attr': { 'class': 'input-xlarge select2-select-00'} }) }}
                                {{ form_errors(newform.code) }}

                            </div>

                            {{ form_label(newform.city, 'Gemeente', {'attr': { 'class': 'control-label'} })}}
                            <div class="controls">
                                {{ form_widget(newform.city, {'attr': { 'class': 'input-xlarge select2-select-00'} }) }}
                                {{ form_errors(newform.city) }}
                            </div>
                        </div>
                        <div class="form-actions">
                            {{ form_widget(newform._token) }}
                            <input type="submit" name="submit"  class="btn btn-primary" value="Toevoegen" />
                            <button class="btn">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}